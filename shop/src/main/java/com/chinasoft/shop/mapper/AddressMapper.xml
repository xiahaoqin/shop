<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.chinasoft.shop.mapper.AddressMapper" >
  <insert id="addAdress" parameterType="address" >
    insert into address values (#{id}, #{uname}, #{area}, 
      #{street}, #{phone}, #{code}, 
      #{cellPhone}, #{state}, #{uid})
  </insert>
 
  <select id="findAll" resultType="address">
  	select * from address 
  </select>
  
   <select id="findOne" resultType="address">
  	select * from address where id=#{id}
  </select>
  
  <update id="update" parameterType="address">
  	update address set uname=#{uname},area=#{area}, 
      street=#{street}, phone=#{phone}, code=#{code}, 
      cellphone=#{cellPhone}, state=#{state} where id=#{id}
  </update>
  
  <delete id="delete">
  	delete from address where id=#{id}
  </delete>
</mapper>